{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./scripts/js",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "lib": ["ES2022", "DOM"]
  }
}
